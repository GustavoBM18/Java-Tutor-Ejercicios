digraph DiagramaVehiculosColoreado {
    // Configuración general
    rankdir=TB;
    node [fontname="Arial", fontsize=12, style="filled"]; // Agregamos estilo relleno
    edge [fontsize=10];
    bgcolor="transparent";

    // Nodos Principales
    Inicio [label="INICIO", shape=ellipse, fillcolor="#B3E5FC"];
    Entrada [label="MODELO, PRECIO", shape=parallelogram, fillcolor="#F9F9F9"];
    
    // Selector Múltiple (Hexágono en Verde Claro)
    Selector [label="MODELO", shape=hexagon, fillcolor="#C8E6C9"];

    // Procesos de asignación de descuento (Gris Claro)
    Desc1 [label="DESC ← 0.08", shape=box, fillcolor="#F9F9F9"];
    Desc2 [label="DESC ← 0.05", shape=box, fillcolor="#F9F9F9"];
    Desc3 [label="DESC ← 0.06", shape=box, fillcolor="#F9F9F9"];
    Desc4 [label="DESC ← 0.09", shape=box, fillcolor="#F9F9F9"];
    DescDef [label="DESC ← 0", shape=box, fillcolor="#F9F9F9"]; 

    // Cálculo final (Gris Claro)
    Calculo [label="PAGO_FINAL ← PRECIO - (PRECIO * DESC)", shape=box, fillcolor="#F9F9F9"];
    
    // Salida (Amarillo Claro)
    Salida [label="PAGO_FINAL", shape=egg, fillcolor="#FFF9C4"];
    
    // Fin (Azul Claro)
    Fin [label="FIN", shape=ellipse, fillcolor="#B3E5FC"];

    // --- CONEXIONES ---
    Inicio -> Entrada;
    Entrada -> Selector;

    // Ramas del selector (Casos)
    Selector -> Desc1 [label="\"Blazer-Trail\""];
    Selector -> Desc2 [label="\"Cavalier\""];
    Selector -> Desc3 [label="\"Chevy\""];
    Selector -> Desc4 [label="\"Opel-Astra\""];
    Selector -> DescDef [label="Otro"];

    // Unir todos los caminos al cálculo
    Desc1 -> Calculo;
    Desc2 -> Calculo;
    Desc3 -> Calculo;
    Desc4 -> Calculo;
    DescDef -> Calculo;

    // Final
    Calculo -> Salida;
    Salida -> Fin;
}